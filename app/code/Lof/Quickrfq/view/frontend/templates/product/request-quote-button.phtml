            id="lof-quote-request-button"
            data-role="lof-create-quote"
            title="<?php $block->escapeHtmlAttr(__('Request a Quote')) ?>"
            class="action lof-quote-request-button">
        <span><?= $block->escapeHtml(__('Request a Quote')) ?></span>
    </button>
<?php endif; ?>
