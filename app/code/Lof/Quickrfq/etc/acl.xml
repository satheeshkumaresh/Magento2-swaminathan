<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Lof_Extensions::landofcoderextensions" title="Lof Extensions">
                    <resource id="Lof_Quickrfq::quickrfq" title="Quick RFQ" sortOrder="30">
                        <resource id="Lof_Quickrfq::quickrfq_approve" sortOrder="2" title="Approve Quote"/>
                        <resource id="Lof_Quickrfq::quickrfq_close" sortOrder="2" title="Close Quote"/>
                        <resource id="Lof_Quickrfq::quickrfq_save" sortOrder="10" title="Save Quote"/>
                        <resource id="Lof_Quickrfq::quickrfq_delete" sortOrder="20" title="Delete Quote"/>
                        <resource id="Lof_Quickrfq::quickrfq_update" sortOrder="30" title="Update Quote"/>
                        <resource id="Lof_Quickrfq::quickrfq_view" sortOrder="40" title="View Quote"/>
                        <resource id="Lof_Quickrfq::send" sortOrder="50" title="Send Message"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_Quickrfq::config_quickrfq" title="Lof Quick Request For Quote Config" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
